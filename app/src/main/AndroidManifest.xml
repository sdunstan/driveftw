<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stevedunstan.driveftw">

    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".DriveService"
            android:exported="false" />

        <activity
            android:name=".DriveHistoryActivity"
            android:label="@string/title_activity_drive_history"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".LeaderboardActivity"
            android:label="@string/title_activity_leaderboard"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AchievementsActivity"
            android:label="@string/title_activity_achievements"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CarInfoActivity"
            android:label="@string/title_activity_car_info"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>